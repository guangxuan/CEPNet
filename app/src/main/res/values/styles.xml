<resources>

    <!-- Base application theme. -->
    <style name="customAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="login_title">
        <item name="android:textSize">@dimen/text_extra_extra_large</item>
        <item name="android:textColor">@color/main_title_text_color</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="signup_title">
        <item name="android:textSize">@dimen/text_extra_extra_large</item>
        <item name="android:textColor">@color/main_title_text_color</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium</item>
    </style>

    <style name="label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_extra_small</item>
        <item name="android:layout_marginBottom">@dimen/padding_medium_neg</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="login_textbox">
        <item name="android:layout_marginTop">@dimen/padding_extra_extra_small</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:maxLength">50</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="nav_entry">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_extra_small</item>
        <item name="android:textColor">@color/nav_entry_unselected</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="nav_entry_icon">
        <item name="android:layout_width">@dimen/nav_entry_icon</item>
        <item name="android:layout_height">@dimen/nav_entry_icon</item>
        <item name="android:layout_margin">@dimen/padding_extra_small</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#002f9a</item>
    </style>

</resources>
