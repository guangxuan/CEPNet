<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_extra_small"
    android:paddingRight="@dimen/padding_extra_small">

    <!--Deliberately placed button to obstruct onclick event on list-->
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_extra_small"
            android:textStyle="italic"
            android:textColor="@color/title_text_color"
            android:paddingTop="@dimen/padding_extra_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/dummy"
            android:id="@+id/notifDateView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_mid_small"
            android:paddingTop="@dimen/padding_extra_extra_small"
            android:paddingBottom="@dimen/padding_extra_small"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_small"
            android:text="@string/dummy1"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:id="@+id/notifContentView"/>

    </LinearLayout>

</LinearLayout>
